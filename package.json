{
  "name": "agenda-arroio",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:emulators": "concurrently \"npm run emulators:dev\" \"npm run dev\"",
    "dev:staging": "vite --mode staging",
    "dev:prod": "vite --mode production",
    "build": "vite build",
    "build:staging": "vite build --mode staging",
    "build:dev": "vite build --mode development",
    "preview": "vite preview",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "prepare": "husky install",
    "backup": "node scripts/backup.js",
    "backup:now": "node scripts/backup.js --now",
    "emulators:dev": "firebase use dev && firebase --config firebase.dev.json emulators:start",
    "emulators:staging": "firebase use staging && firebase emulators:start",
    "emulators:prod": "firebase use production && firebase emulators:start",
    "corrigir:dev": "dotenv -e .env.development -- node corrigir-usuarios.js",
    "corrigir:staging": "dotenv -e .env.staging -- node corrigir-usuarios.js",
    "corrigir:prod": "dotenv -e .env.production -- node corrigir-usuarios.js"
  },
  "dependencies": {
    "@heroicons/vue": "2.2.0",
    "@vueuse/core": "^10.7.0",
    "chart.js": "^4.4.0",
    "dotenv": "^16.4.5",
    "firebase": "11.8.1",
    "firebase-admin": "13.4.0",
    "node-cron": "^3.0.3",
    "pinia": "3.0.3",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-vue": "6.0.1",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "autoprefixer": "^10.4.16",
    "concurrently": "9.2.1",
    "dotenv-cli": "8.0.0",
    "eslint": "^8.54.0",
    "eslint-plugin-vue": "^9.18.1",
    "firebase-tools": "14.18.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2",
    "vite": "7.1.9",
    "vite-plugin-inspect": "11.3.3",
    "vite-plugin-vue-devtools": "7.7.6",
    "vue-tsc": "3.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,less,html,json,md}": [
      "prettier --write"
    ]
  }
}
