{
  "firestore": {
    "rules": "./firebase/devs/firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9098
    },
    "firestore": {
      "port": 8081
    },
    "storage": {
      "port": 9198
    },
    "ui": {
      "enabled": true,
      "port": 4001
    },
    "hub": {
      "port": 4401
    },
    "logging": {
      "port": 4501
    },
    "singleProjectMode": true,
    "functions": {
      "port": 5001
    },
    "database": {
      "port": 9000
    }
  },
  "storage": {
    "rules": "./firebase/rules/storage.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ]
}